<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/idphotodetails"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_camera"
            android:tint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/marquetextviewdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Marque" />
            <TextView
                android:id="@+id/intituletextviewdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intitulé du véhicule"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/typetextviewdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:text="Type" />
        <TextView
            android:id="@+id/carburanttextviewdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carburant" />
        <TextView
            android:id="@+id/imattextviewdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immatriculation" />
        <TextView
            android:id="@+id/prixtextviewdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prix" />
        </LinearLayout>
    </LinearLayout>